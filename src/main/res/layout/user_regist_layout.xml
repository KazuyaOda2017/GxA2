<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/toppage"
    >

    <TextView
        android:id="@+id/title_userregist"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:text="@string/user_regist"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext_username"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="230dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="3dp"
        android:background="#000"/>

    <RadioGroup
        android:id="@+id/radiogroup_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="40dp"
        >
        <RadioButton
            android:id="@+id/radiobtn_man"
            android:tag="0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="20dp"

            />
        <RadioButton
            android:id="@+id/radiobtn_woman"
            android:tag="1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/radiobtn_other"
            android:tag="1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="20dp"/>
    </RadioGroup>

    <View
        android:layout_marginTop="360dp"
        android:layout_marginLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="4dp"
        android:background="#000"/>

    <Button
        android:id="@+id/submit_userInfoBtn"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:layout_height="45dp"
        android:layout_width="250dp"
        android:text="Join Now!"
        android:textSize="20sp"/>

</RelativeLayout>